<div class="row clearfix">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="body">
                <form action="@Url.RouteUrl("GroupControlLocalizedDefault", new { controller = "process", action = "setting"})" method="POST" enctype="multipart/form-data">
                    <div class="row clearfix">
                        <div class="col-md-12 col-sm-12">
                            <div class="form-group">
                                <label for="process-name" class="required">Process Name</label>
                                <input type="text" class="form-control" id="process-name" name="@Html.NameFor(m => m.Name)" value="@Model.Name">
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <div class="form-group">
                                <label for="process-description">Description</label>
                                <textarea class="form-control" rows="6" placeholder="Write something about your process (optional)" id="process-description" name="@Html.NameFor(m => m.Description)">@Model.Description</textarea>
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <div class="form-group">
                                <button class="btn btn-primary-theme waves-effect" type="submit">Save</button>
                                <button class="btn btn-default waves-effect" type="button">Back</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section CustomScripts{
